# Environment Variables Example
# Copy this to .env and fill in your values

# ==========================================
# BACKEND (.env in backend/)
# ==========================================

# Server
PORT=4000
ENVIRONMENT=development

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5433/kuafcv?sslmode=disable

# Redis
REDIS_URL=localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-64

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# CORS (for production use: https://sysmasters.uz,https://www.sysmasters.uz)
ALLOWED_ORIGINS=http://localhost:3000

# File Upload
MAX_FILE_SIZE=20971520

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_FORMAT=text
LOG_LEVEL=debug

# ==========================================
# FRONTEND (.env in frontend/)
# ==========================================

# API
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development
